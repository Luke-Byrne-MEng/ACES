<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find jet_control)/config/jet_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner"
    pkg="controller_manager"
    type="spawner" respawn="false"
    output="screen" ns="/jet"
    args="joint_state_controller
      mobile_base_controller"
  />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <param name="robot_description" command="$(find xacro)/xacro '$(find jet_description)/urdf/jet.xacro'"/>
    <remap from="/joint_states" to="/jet/joint_states" />
  </node>


  <node name="cmdvelrelay" pkg="topic_tools" type="relay" args="/cmd_vel /mobile_base_controller/cmd_vel"/>
  <node name="odomrelay" pkg="topic_tools" type="relay" args="/mobile_base_controller/odom /odom"/>

</launch>
